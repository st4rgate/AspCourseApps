@model StockTrade

@{
    ViewBag.Title = "Finnhub Stocks";
}

<section class="dashboard">
    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <!-- Card Start-->
                    <div class="col-lg-12">
                        <div class="card info-card revenue-card">
                            <div class="card-body">
                                <h5 class="card-title">@Model.StockName | @Model.StockSymbol</h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-currency-dollar"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>
                                            <span>@Model.Currency</span>
                                            <span class="price">@Model.Price.ToString()</span>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Card End -->
                </div>
            </div>

            <div class="col-md-6">
                <div class="row">
                    <label for="lbl-Qty" class="col-1 col-form-label me-1">Qty:</label>
                    <div class="col-4 pb-2">
                        <input type="text" class="form-control" id="lbl-Qty" name="Quantity" value="@Model.Quantity" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-5 d-flex justify-content-around pt-2 border-top">
                        <button class="btn btn-success btn-sm mx-start" type="submit" formaction="~/Trade/BuyOrder"><i class="bi bi-arrow-up"></i> BUY</button>
                        <button class="btn btn-danger btn-sm mx-end" type="submit" formaction="~/Trade/SellOrder"><i class="bi bi-arrow-down"></i> SELL</button>
                    </div>
                </div>
            </div>
        </div>

        <input type="hidden" name="StockSymbol" id="StockSymbolID" value="@Model.StockSymbol" />
        <input type="hidden" name="StockName" id="StockName" value="@Model.StockName" />
        <input type="hidden" name="Price" id="Price" value="@Model.Price" />
        <input type="hidden" name="Token" id="TokenID" value="@ViewBag.Token" />
    </form>
</section>

@section JS{
    <script src="~/assets/js/FinnhubScript.js"></script>
}
